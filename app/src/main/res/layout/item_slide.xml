<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_title"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:typeface="monospace"
        android:text="title"/>
    <com.github.lakeshire.lemonapp.view.slidelistview.ScrollItemView
        android:id="@+id/item_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_toRightOf="@id/item_title"
        android:layout_toLeftOf="@+id/check">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_data1"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:typeface="monospace"/>
            <TextView
                android:id="@+id/item_data2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:typeface="monospace"/>
            <TextView
                android:id="@+id/item_data3"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:typeface="monospace"/>
            <TextView
                android:id="@+id/item_data4"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:typeface="monospace"/>
            <TextView
                android:id="@+id/item_data5"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:typeface="monospace"/>
            <TextView
                android:id="@+id/item_data6"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:typeface="monospace"/>
            <TextView
                android:id="@+id/item_data7"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:typeface="monospace"/>
        </LinearLayout>
    </com.github.lakeshire.lemonapp.view.slidelistview.ScrollItemView>
    <CheckBox
        android:layout_alignParentRight="true"
        android:id="@id/check"
        android:layout_centerVertical="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"/>
</RelativeLayout>