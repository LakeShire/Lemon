<?xml version="1.0" encoding="utf-8"?>
<com.github.lakeshire.lemonapp.view.pulltofresh.EnhancePtrFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptr_frame"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cube_ptr:ptr_resistance="1.7"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="1"
    cube_ptr:ptr_duration_to_close="300"
    cube_ptr:ptr_duration_to_close_header="2000"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_pull_to_fresh="true">

    <com.github.lakeshire.lemonapp.view.slidelistview.SlideListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slide_list">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header">
            <TextView
                android:id="@+id/title"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="名称"
                android:textSize="18sp"/>
            <com.github.lakeshire.lemonapp.view.slidelistview.ScrollItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scroll_title"
                android:scrollbars="none"
                android:layout_toRightOf="@id/title"
                android:layout_toLeftOf="@+id/block">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="最新"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:textSize="18sp"/>
                    <TextView
                        android:text="涨幅"
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="涨跌"
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="成交量"
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="开盘价"
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="最高价"
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="最低价"
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                </LinearLayout>
            </com.github.lakeshire.lemonapp.view.slidelistview.ScrollItemView>
            <CheckBox
                android:layout_alignParentRight="true"
                android:id="@id/block"
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <com.github.lakeshire.lemonapp.view.LoadMoreListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_list">
        </com.github.lakeshire.lemonapp.view.LoadMoreListView>
    </com.github.lakeshire.lemonapp.view.slidelistview.SlideListView>
</com.github.lakeshire.lemonapp.view.pulltofresh.EnhancePtrFrameLayout>